<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User List</title>
  <link rel="stylesheet" href="/style.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@200..700&display=swap" rel="stylesheet">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@200..700&family=Roboto+Slab:wght@100..900&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
  <!-- seccion de listado de user-->
  <div class="container">
    <div class="list">
      <h1 class="roboto-slab">Lista de Usuarios</h1>
      <hr>
      <table class="w3-table w3-bordered">
        <tr class="oswald-font">
          <td class="fila">Id</td>
          <td class="fila">Nombre</td>
          <td class="fila">email</td>
          <td class="fila">Opciones</td>
        </tr>
        <% users.forEach(user=> { %>
          <tr>
            <td>
              <%= user.id %>
            </td>
            <td>
              <%= user.name %>
            </td>
            <td>
              <%= user.email %>
            </td>
            <td>
              <button class="btn-eliminar" onclick="eliminarUsuario('<%= user.id %>','<%= user.name %>' )">Eliminar</button>
              <button type ="button" data-bs-toggle="modal" data-bs-target="#staticBackdrop" class="btn-editar" onclick="capturarID('<%= user.id %>')">Editar</button>
            </td>
          </tr>
          <% }); %>
      </table>
    </div>
    <!-- seccion de Agregado de user-->
    <div class="agregarUser">
      <h2 class="roboto-slab">Formulario para agregar nuevo usuario</h2>
      <hr>
      <form action="/compas/users" method="POST">
        <div class="campo">
          <label class="oswald-font">Nombre: </label><input type="text" name="name" placeholder="Nombre" required>
        </div>
        <br>
        <div class="campo">
          <label class="oswald-font">Correo: </label><input type="email" name="email" placeholder="Correo" required>
        </div>
        <br>
        <button type="submit" class="btnq" class="roboto-slab" >Agregar Usuario</button>
      </form>
    </div>
  </div>
  <!-- seccion de formulario de modificacion de user-->
  <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header" >
          <h5 id="staticBackdropLabel" >Formulario de Edicion de Usuario</h5>    
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <p class="subtitulo">Modificar el Usuario con id:</p>
        <h6 class="identiti" id="identificador"></h6>
        <div class="modal-body">
          <form action="/compas/users" method="PUT">
            <div class="mb-3">
              <label  class="form-label">Nombre</label>
              <input type="text" class="form-control"  id="name" name="name" required>
              <div id="emailHelp" class="form-text">Ingrese el nuevo Nombre.</div>
            </div>
            <div class="mb-3">
              <label class="form-label">Correo</label>
              <input type="email" class="form-control"  id="email" name="email" aria-describedby="emailHelp" required>
              <div id="emailHelp" class="form-text">Ingrese el nuevo correo.</div>
            </div>
            <button type="submit" class="btn btn-success" onclick="updateId()" >Submit</button>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancelar</button>
        </div>
      </div>
    </div>
  </div>
  <script src="/script.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>

</html>